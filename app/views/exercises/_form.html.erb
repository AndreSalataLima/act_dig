<%= form_with(model: [@session, @exercise], local: true) do |form| %>
  <% if @exercise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>
      <ul>
        <% @exercise.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :machine %>
    <%= form.text_field :machine %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.datetime_select :duration %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.number_field :weight %>
  </div>

  <div class="field">
    <%= form.label :repetition %>
    <%= form.number_field :repetition %>
  </div>

  <div class="field">
    <%= form.label :serie %>
    <%= form.number_field :serie %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
